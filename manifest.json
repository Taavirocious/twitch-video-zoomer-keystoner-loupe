{
    "name": "Twitch Video Zoomer",
    "description": "Zoom in to video on twitch.tv to magnify and enlarge.",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.twitch.tv/*"
            ],
            "js": [
                "zoom_script.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "/icons/16.png",
        "32": "/icons/32.png",
        "48": "/icons/48.png",
        "128": "/icons/128.png"
    }
}