{
    "name": "Twitch Video Zoomer, Keystoner & Loupe",
    "description": "Zoom in to video on twitch.tv to magnify, tilt and enlarge.",
    "version": "0.21",
    "manifest_version": 3,
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.twitch.tv/*"
            ],
            "js": [
                "zoomer_script.js"
            ],
            "css": [
		 "zoomer_styling.css"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "/icons/16.png",
        "32": "/icons/32.png",
        "48": "/icons/48.png",
        "128": "/icons/128.png"
    }
}
